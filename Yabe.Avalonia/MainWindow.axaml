<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yabe.Avalonia"
        mc:Ignorable="d"
        x:Class="Yabe.Avalonia.MainWindow"
        x:DataType="local:MainWindowViewModel"
        Title="Yabe BACnet 跨平台工具" Width="900" Height="700">
    <Grid ColumnDefinitions="2.2*,5*" Margin="20">
        <!-- 左侧设备列表 -->
        <StackPanel Grid.Column="0" Margin="0,0,16,0">
            <TextBlock Text="BACnet 设备列表" FontSize="24" Margin="0,0,0,20"/>
            <Button Content="发现设备" Command="{Binding DiscoverCommand}" Width="120"/>
            <ListBox ItemsSource="{Binding Devices}"
                     SelectedItem="{Binding SelectedDevice, Mode=TwoWay}"
                     Margin="0,20,0,0" Height="200">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Display}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <!-- 右侧详情+日志上下分区 -->
        <Grid Grid.Column="1" RowDefinitions="2.5*,1.2*">
            <!-- 设备详情 -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,0" Padding="10">
                        <StackPanel>
                            <TextBlock Text="设备详情" FontWeight="Bold" FontSize="18"/>
                            <TextBlock Text="ID:"/>
                            <TextBlock Text="{Binding SelectedDevice.Id}"/>
                            <TextBlock Text="地址:"/>
                            <TextBlock Text="{Binding SelectedDevice.Address}"/>
                            <TextBlock Text="厂商:"/>
                            <TextBlock Text="{Binding SelectedDevice.Vendor}"/>
                            <TextBlock Text="名称:"/>
                            <TextBlock Text="{Binding SelectedDevice.Name}"/>
                            <TextBlock Text="对象数:"/>
                            <TextBlock Text="{Binding SelectedDevice.ObjectCount}"/>
                            <TextBlock Text="对象浏览" FontWeight="Bold" FontSize="16" Margin="0,10,0,0"/>
                            <ListBox ItemsSource="{Binding SelectedDevice.Objects}" SelectedItem="{Binding SelectedObject, Mode=TwoWay}" Height="120">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                            <TextBlock Text=" ("/>
                                            <TextBlock Text="{Binding Type}"/>
                                            <TextBlock Text=")"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <TextBlock Text="属性列表" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
                            <ItemsControl ItemsSource="{Binding SelectedObject.Properties}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" Width="160"/>
                                            <TextBlock Text=": "/>
                                            <TextBlock Text="{Binding Value}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            <!-- 日志 -->
            <StackPanel Grid.Row="1" Margin="0,20,0,0">
                <TextBlock Text="日志" FontWeight="Bold" FontSize="16" Margin="0,0,0,0"/>
                <ListBox ItemsSource="{Binding Logs}" Height="120"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
